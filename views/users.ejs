<%- include ('partials/header.ejs') %>
<%- include ('partials/main_nav.ejs') %>

<main class="users-container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header row -->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Password</th>
                </tr>

                <!-- Repeatable Templete Row -->
                <% for(let count = 0; count < userList.length; count++) { %>
                    <tr>
                        <td class="text-center"> <%= userList[count].Name %> </td>
                        <td class="text-center"> <%= userList[count].Email %> </td>
                        <td class="text-center"> <%= userList[count].Password %> </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>


<%- include ('partials/bottom_nav.ejs') %>
<%- include ('partials/footer.ejs') %>